// https://code.visualstudio.com/docs/languages/jsconfig

{
  "compilerOptions": {
    "target": "ES6",
    // allow absolute paths
    "baseUrl": "src",
    // configure module path aliases
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["coverage", "dist", "node_modules"],
  "include": ["src/**/*", "node_modules/cypress", "./cypress/**/*.js"]
}
